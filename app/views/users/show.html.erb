<%= render 'layouts/navbar' %>

<div class="container">
    <div class="row mt-3">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-header">
                    <h3><%= @user.name %>'s Profile</h3>
                </div>
                <div class="card-body">
                    <%= image_tag("https://i.pravatar.cc/300?u=#{current_user.email}", :size => "100x100", :class => "rounded-circle mb-3") %>
                    <p class="card-text">Email: <%= @user.email %></p>
                </div>
            </div>
            <div class="text-center mt-3">
                <%= link_to 'Back', image_posts_path %>
            </div>
        </div>
        <div class="col-md-3">
        </div>
    </div>
</div>

