<p id="notice"><%= notice %></p>

<h1>Image Posts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Picture</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @image_posts.each do |image_post| %>
      <tr>
        <td><%= image_post.content %></td>
        <td><%= image_post.picture %></td>
        <td><%= image_post.user %></td>
        <td><%= link_to 'Show', image_post %></td>
        <td><%= link_to 'Edit', edit_image_post_path(image_post) %></td>
        <td><%= link_to 'Destroy', image_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image Post', new_image_post_path %>
